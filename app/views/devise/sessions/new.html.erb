<div class="row pt-5">
  <div class="col-md-4 offset-md-4 pt-5">
    <div class="card container ">
      
      <h2>ログイン</h2>
      
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      
        <div class="field top-margin ml-5 mr-5">
          <%= f.label 'メールアドレス' %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email",class:"form-control" %>
        </div>
      
        <div class="field top-margin ml-5 mr-5">
          <%= f.label 'パスワード' %><br />
          <%= f.password_field :password, autocomplete: "current-password",class:"form-control" %>
        </div>
      
        <% if devise_mapping.rememberable? %>
          <div class="field text-right mr-5 mt-3 mb-3">
            <%= f.check_box :remember_me %>
            <%= f.label 'パスワードを維持する' %>
          </div>
        <% end %>
      
        <div class="actions text-right mr-5 mt-3 mb-3">
          <%= f.submit "ログイン",class:"btn btn-sm btn-primary pt-1 pb-1 pl-3 pr-3" %>
        </div>
      <% end %>
      
    </div>
  </div>
</div>




