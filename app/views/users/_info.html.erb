<table>
  <tr><%= attachment_image_tag(user, :icon_image, :fill, 40, 40, fallback: "no_image.jpg",size: '50x50') %></tr>
  <tr>
	  <th><%= user.name %></th>
  </tr>
  <tr>
	  <th><%= user.self_introduction %></th>
  </tr>
</table>


<% if current_user == user %>
  <%= link_to 'プロフィール編集',edit_user_path(user),class: "edit_user_#{user.id}" %>
<% else %>
  <% if current_user.following?(user) %>
    <%= link_to "フォロー解除", user_relationships_path(user.id), method: :delete %>
  <% else %>
    <%= link_to "フォローする", user_relationships_path(user.id), method: :post %>
  <% end %>
<% end %>
</br>
<%= link_to "いいねしたシナリオ", scenario_favorites_user_path(user) %></br>
