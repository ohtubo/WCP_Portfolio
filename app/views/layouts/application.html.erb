<!DOCTYPE html>
<html>
  <head>
    <title>WCPPortfolio</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://kit.fontawesome.com/654ad14aa3.js" crossorigin="anonymous"></script>
  </head>

  <body class="main-bg-color ">
    <%= render 'layouts/header' %>
      <main>
        <div id="flash_message">
          <%= render 'layouts/flash' %>
        </div>
        <%= yield %>
      </main>
    <%= render 'layouts/footer' %>
  </body>

<!--ツールチップを出すためのJS-->
<script src="https://unpkg.com/popper.js@1"></script>
<script src="https://unpkg.com/tippy.js@5"></script>
<!--ツールチップのJSを制御するためのJS-->
<script src="https://coco-factory.jp/ugokuweb/wp-content/themes/ugokuweb/data/9-3-1/js/9-3-1.js"></script>

</html>